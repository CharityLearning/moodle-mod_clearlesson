{{!
    @template mod_clearlesson/elements/resource_browser

    Moodle template for the list of valid options in an autocomplate form element.
}}
<div class="form-group d-flex mr-3 mb-2 filter-parent" style="height: 38px;">
    <div class="filter-child d-flex">
        <label for="{{key}}-filter" class="d-flex align-items-center filter-label">{{title}}</label>
        <select class="form-control browser-filter" style="width:unset!important" id="{{key}}-filter" name="{{key}}" data-initial-value={{initial}}>
            {{#options}}
                <option {{#selected}}selected{{/selected}} value="{{key}}">{{value}}</option>
            {{/options}}
        </select>
    </div>
</div>