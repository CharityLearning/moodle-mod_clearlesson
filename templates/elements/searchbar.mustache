    <input class="form-control" id='search' name="search" value="" autocomplete="off" placeholder="Search" type="text">
    <div class="input-group-append search-button-parent">
        <button class="cl-search-append btn btn-secondary" z-index="1" style="height:36.5px!important;">
            <i class="fa fa-search"></i>
        </button>
    </div>
</div>