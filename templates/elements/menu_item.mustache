{{!
    @template mod_clearlesson/elements/menu_item

    Moodle template for the list of valid options in an autocomplate form element.
}}
<div class="col-12 {{^modal}}col-lg-6{{/modal}} mb-3 {{#hidden}}d-none{{/hidden}}" id="menu-item-{{id}}" 
data-speakers="{{speakers}}" data-topics="{{topics}}" data-animation="{{animation}}"
data-hiddenby="{{hiddenby}}" data-playlists="{{playlists}}" data-series="{{series}}" 
data-collections="{{collections}}" {{#hidden}}aria-hidden="true"{{/hidden}}>
    <div class="menu-item-card card d-flex flex-nowrap flex-row">
        <div class="menu-item-card-image" style="height: 96px!important;">
            <div class="play-{{^src}}playlist-{{/src}}video-card-image"
            style="width: 1{{#src}}7{{/src}}{{^src}}8{{/src}}0px; height: 96px!important;border-top-left-radius: 8px; border-bottom-left-radius: 8px; overflow:hidden">
                {{#src}}<a href="javascript:void(0)" class="play-icon mini-player" data-externalref="{{externalref}}" data-src="{{src}}">
                    <i class="fas fa-play-circle"></i>
                </a>{{/src}}
                <div class="time">{{duration}}</div>
                <div class="video-player-link menu-item-thumbnail" href="javascript:void(0)">
                    {{#thumbnail}}<img class="img-fluid" src="{{thumbnail}}" alt="{{name}}">{{/thumbnail}}
                    {{{panelshtml}}}
                </div>
            </div>
        </div>
        <div class="menu-item-card-body d-flex flex-column justify-content-between pl-{{#src}}3{{/src}}{{^src}}1{{/src}} pt-2"
        style="width: calc(100% - 1{{#src}}7{{/src}}{{^src}}8{{/src}}0px)">
            <div class="menu-item-title">
                <span class="searchable mr-1 card-title mb-0" style="line-height: 1.3!important; display:block;font-size:16px;">{{name}}</span>
                {{^src}}
                    <div class="menu-item-details">
                        <span class="menu-item-details-view"></span>
                        <a href="javascript:void(0)" class="video-details-view view-link" data-externalref="{{externalref}}"
                        data-view="{{externalref}}" style="font-size:13px;"><i class="fas fa-video"></i> {{count}} {{countstring}}</a>
                    </div>
                {{/src}}
            </div>
            {{> mod_clearlesson/elements/select_resource_button }}
        </div>
    </div>
</div>