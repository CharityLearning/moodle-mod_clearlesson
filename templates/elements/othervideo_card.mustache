{{!
    @template mod_clearlesson/othervideo_card

    Moodle template for the list of valid options in an autocomplate form element.
}}
<div class="video-card-side video-card-list has-position" data-position="{{position}}">
    {{#playlistref}}
        <div class="playlist-play-content-video-number">
            {{#active}}<i class="fas fa-play"></i>{{/active}}
            {{^active}}{{position}}{{/active}}
        </div>
    {{/playlistref}}
    <div class="play-{{#playlists}}playlist-{{/playlists}}video-card-image">
        <a href="javascript:void(0)" class="play-icon" data-externalref="{{vimeoref}}">
            <i class="fas fa-play-circle"></i>
        </a>
    <div class="time">{{convertedduration}}</div>
        <a class="video-player-link" href="javascript:void(0)" data-externalref="{{vimeoref}}">
            <img class="img-fluid" src="{{smallthumbnail}}" alt="{{name}}">
        </a>
    </div>
    <div class="video-card-body">
        <div class="play-{{#playlists}}playlist-{{/playlists}}video-card-body">
            <div class="video-title">
                <a href="javascript:void(0)" class="v video-player-link" data-externalref="{{vimeoref}}">{{name}}</a>
            </div>
            {{^speakeref}}
                <div class="play-video-view">
                    <a href="javascript:void(0)" class="speaker-link" data-speakers="{{speakercleanname}}">{{speakername}}</a>
                </div>
            {{/speakeref}}
        </div>
    </div>
</div>