{{!
    @template mod_clearlesson/elements/menu_item

    Moodle template for the list of valid options in an autocomplate form element.
}}
<div class="col-xl-6 col-sm-12 mb-3 {{#hidden}}d-none{{/hidden}} menu-item" id="menu-item-{{id}}" 
data-playlists="{{playlists}}" data-series="{{series}}" data-collections="{{collections}}"
data-externalref="{{externalref}}">
    <div class="menu-item-card card d-flex flex-nowrap flex-row">
        <div class="menu-item-card-image" style="height: 96px!important;">
            <div class="play-playlist-video-card-image"
            style="width: 180px; height: 96px!important;border-top-left-radius: 8px; border-bottom-left-radius: 8px; overflow:hidden">
                <a href="javascript:void(0)" class="play-icon incourse-player-link" data-externalref="{{externalref}}"
                data-type="{{#isplaylist}}playlists{{/isplaylist}}{{^isplaylist}}series{{/isplaylist}}">
                    <i class="fas fa-play-circle"></i>
                </a>
                <div class="video-player-link menu-item-thumbnail" href="javascript:void(0)">
                    {{{panelshtml}}}
                </div>
            </div>
        </div>
        <div class="menu-item-card-body d-flex flex-column justify-content-between pt-2"
        style="width: calc(100% - 180px); position: relative;">
            <div class="menu-item-title">
                <span class="searchable mr-1 card-title mb-0"
                style="line-height: 1.3!important; display:block;font-size:16px;">{{name}}</span>
                    <div class="menu-item-details">
                        <span class="menu-item-details-view"></span>
                        <span href="javascript:void(0)" class="video-details-view view-link" data-externalref="{{externalref}}"
                        data-view="{{externalref}}" style="font-size:13px;color: var(--info)"><i class="fas fa-video"></i> {{count}} {{countstring}}</span>
                    </div>
            </div>
            {{> mod_clearlesson/elements/icons/watched_check }}
        </div>
    </div>
</div>