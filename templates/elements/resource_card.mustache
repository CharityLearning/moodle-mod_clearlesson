{{!
    @template mod_clearlesson/elements/resource_card

    Moodle template for the list of valid options in an autocomplate form element.
}}
<div class="col-xl-3 col-sm-6 mb-3 video-card-wrapper {{#hidden}}d-none{{/hidden}}" data-animation="{{animation}}" 
data-hiddenby="{{hiddenby}}" id="resource-{{id}}" data-series="{{series}}" data-collections="{{collections}}" {{#hidden}}aria-hidden="true"{{/hidden}}>
    <div class="video-card">
        <div class="video-card-image">
            <a href="javascript:void(0)" class="view-icon"
            data-view="{{externalref}}" title="{{viewstring}}" data-externalref="{{externalref}}">
                <i class="fa fa-eye"></i>
            </a>
            {{#panelshtml}}
                <a href="javascript:void(0)">
                    {{{panelshtml}}}
                </a>
            {{/panelshtml}}
            {{#thumbnail}}
                <a href="javascript:void(0)">
                    <img class="img-fluid" src="{{thumbnail}}" alt="{{name}}">
                </a>
            {{/thumbnail}}
        </div>
        <div class="video-card-body">
            <div class="video-title">
                <div class="video-details d-flex">
                    <a href="javascript:void(0)" class="video-details-view" data-view="{{externalref}}"><i class="fas fa-video"></i>{{countstring}}</a>
                </div>
                <span class="searchable card-title">{{name}}</span>
            </div>
        </div>
        {{#showselectbutton}}
            {{> mod_clearlesson/elements/select_resource_button }}
        {{/showselectbutton}}
    </div>
</div>