{{!
    @template mod_clearlesson/elements/topic_card

    Moodle template for the list of valid options in an autocomplate form element.
}}
<div class="col-xl-3 col-sm-6 mb-3 video-card-wrapper topic-card {{#hidden}}d-none{{/hidden}}" 
data-hiddenby="{{hiddenby}}" id="resource-{{id}}" {{#hidden}}aria-hidden="true"{{/hidden}}>
    <div class="card" style="height: 100px">
        <div class="card-body">
            <div class="video-title d-flex justify-content-between">
                <div class="topic-title-and-play-icon d-flex align-items-center">
                    <span class="mr-3 searchable card-title mb-0" style="font-size:17px;">{{name}}</span>
                    <a href="javascript:void(0)" class="view-icon topic-play" title="Play video" data-externalref="{{externalref}}">
                        <i class="fa fa-eye"></i>
                    </a>
                </div>
                <a class="video-details-view ml-2" data-view="{{externalref}}"
                style="font-size:13px; position: absolute; top: 12px; right: 18px"><i class="fas fa-video"></i>&nbsp{{countstring}}</a>
            </div>
        </div>
        {{#showselectbutton}}
            {{> mod_clearlesson/elements/select_resource_button }}
        {{/showselectbutton}}
    </div>
</div>