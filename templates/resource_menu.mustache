{{!
    @template mod_clearlesson/resource_browser

    Moodle template for the list of valid options in an autocomplate form element.
}}
<div id="menu-container" class="row" data-type="{{type}}" data-itemtype="{{itemtype}}">
    {{#editor}}
        <div class="w-100 d-flex {{^playlistsexist}}h-100 justify-content-center align-items-center{{/playlistsexist}}">
            {{#playlistsexist}}<div class="spacer" style="flex-grow: 10"></div>{{/playlistsexist}}
            <button class="btn btn-primary playlist-edit" id="create-playlist" data-playlistid="0">
                {{#str}}createplaylist, mod_clearlesson{{/str}}
            </button>
        </div>
    {{/editor}}
    {{#resources}}
        {{> mod_clearlesson/elements/menu_item}}
    {{/resources}}
</div>