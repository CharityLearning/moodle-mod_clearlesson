{{!
    @template mod_clearlesson/resource_player

    Moodle template for the list of valid options in an autocomplate form element.
}}
<div class="mod-clearlesson">
    <div class="page-content-wrapper">
        <div class="container-fluid pt-5">
            <div class="row">
                <div class="col-lg-8 player-column">
                    <div class="box p-0">
                        {{> mod_clearlesson/elements/video_iframe}} 
                        <div class="p-2 speakerinfo d-flex bd-highlight mb-3">
                            <div class="mr-auto bd-highlight">
                                <div class="d-flex bd-highlight">
                                    <div class="mr-auto bd-highlight">
                                        <img class="speaker-img" alt="speaker" src="{{speakerimgsrc}}">
                                    </div>
                                    <div class="mr-auto p-2 bd-highlight">
                                        <a href="javascript:void(0)" class="speaker-link" data-speakers="{{speakeref}}">{{speakername}}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="single-video-info-content box mb-3 tab-content mt-2">
                        <nav class="">
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <a href="#nav-home" class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" role="tab" aria-controls="nav-home" aria-selected="true">
                                    {{#str}} aboutcap, mod_clearlesson {{/str}}
                                </a>
                                <a href="#nav-profile" class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" role="tab" aria-controls="nav-profile" aria-selected="false">
                                    {{#str}} transcriptcap, mod_clearlesson {{/str}}
                                </a>
                            </div>
                        </nav>
                        <div class="tab-pane fade show active mt-4" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                            <h6 class="">{{#str}} speakercap, mod_clearlesson {{/str}}:</h6>
                            <p class="">{{name}}</p>
                            <h6 class="">{{#str}} topicscap, mod_clearlesson {{/str}}</h6>
                            <p class="tags mb-0">
                                {{#topics}}
                                    {{> mod_clearlesson/elements/topic_tag}}
                                {{/topics}}
                            </p>
                        </div>
                        <div class="tab-pane fade mt-2" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                            <h6 class="">{{#str}} transcriptcap, mod_clearlesson {{/str}}</h6>
                                <p class="">{{transcript}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mt-2 video-list-column"{{#playlistref}} data-playlist="{{playlistref}}"{{/playlistref}}
                    {{#speakeref}} data-speaker="{{speakeref}}"{{/speakeref}}>
                    <div class="col-md-12 box">
                        <h6 class="card-subtitle mb-2 text-muted mt-2">
                            {{#isvideo}}{{#str}} relatedvideoscap, mod_clearlesson {{/str}}{{/isvideo}}
                            {{^isvideo}}{{^isspeaker}}{{name}}{{/isspeaker}}{{/isvideo}}
                            {{#isspeaker}}
                                {{#str}} speakervideos, mod_clearlesson {{/str}}
                            {{/isspeaker}}
                        </h6>
                        <hr>
                        {{#othervideos}}
                            {{> mod_clearlesson/elements/othervideo_card}}
                        {{/othervideos}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>